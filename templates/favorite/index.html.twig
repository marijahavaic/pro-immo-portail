{% extends 'base.html.twig' %}

{% block title %}Hello FavoriteController!
{% endblock %}

{% block body %}
	<div class="property-list container row mx-auto p-0 mb-4">
		<h2 class="text-center display-4 mb-4">Mes favoris</h2>
		{# loop to display saved favorites #}


		<div class="container row m-auto">
			{% for favorite in favorites %}
				{% for property in favorite.property %}
					{{ include('components/propertyCard.html.twig') }}

				{% endfor %}
			{% endfor %}
		</div>
		<div class="d-flex justify-content-center mt-3">
			{{ knp_pagination_render(favorite) }}
		</div>
	</div>
{% endblock %}
