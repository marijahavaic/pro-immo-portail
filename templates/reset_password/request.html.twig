{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="h-100 p-5 bg-body-tertiary border rounded-3">

        
    <h1 class="h3 mb-3 font-weight-normal text-center mt-2">Mot de passe oublié ?</h1>

    {{ form_start(requestForm) }}
        <div>
            <p>
                Veuillez saisir l’adresse e-mail de votre compte pour réinitialiser votre mot de passe. Vous allez recevoir un e-mail contenant un lien de réinitialisation dans quelques minutes !
            </p>
        </div>
        {{ form_row(requestForm.email) }}
        

        <button class="btn btn-primary">Réinitialiser</button>
    {{ form_end(requestForm) }}
    </div>
{% endblock %}
